# NIS-HUB v3.1 Configuration Template
# Copy this to .env and configure your settings

# =============================================================================
# üß† NIS-HUB CENTRAL INTELLIGENCE CONFIGURATION
# =============================================================================

# Environment
DEBUG=true
LOG_LEVEL=INFO
NODE_ENV=development

# =============================================================================
# üìä DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL for production, SQLite for development)
DATABASE_URL=postgresql://nishub_user:nishub_password@localhost:5432/nishub_db
# Alternative SQLite for development:
# DATABASE_URL=sqlite:///./data/nishub.db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# üåê API & NETWORK CONFIGURATION
# =============================================================================

# Backend API
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Dashboard
FRONTEND_PORT=3000

# WebSocket Configuration
WS_HOST=localhost
WS_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# üß† CONSCIOUSNESS SERVICE CONFIGURATION
# =============================================================================

# Consciousness Features
CONSCIOUSNESS_ENABLED=true
CONSCIOUSNESS_LOG_LEVEL=INFO
CONSCIOUSNESS_MIN_AWARENESS_THRESHOLD=0.3
CONSCIOUSNESS_BIAS_DETECTION_SENSITIVITY=0.7

# Ethical Framework Weights
CONSCIOUSNESS_HARM_PREVENTION_WEIGHT=0.4
CONSCIOUSNESS_FAIRNESS_WEIGHT=0.3
CONSCIOUSNESS_AUTONOMY_WEIGHT=0.2
CONSCIOUSNESS_TRANSPARENCY_WEIGHT=0.1

# =============================================================================
# üî¢ KAN NETWORKS CONFIGURATION
# =============================================================================

# KAN Service
KAN_ENABLED=true
KAN_DEFAULT_GRID_SIZE=10
KAN_MAX_POLYNOMIAL_DEGREE=5
KAN_INTERPRETABILITY_THRESHOLD=0.7
KAN_SYMBOLIC_SIMPLIFICATION=true

# KAN Model Settings
KAN_DEFAULT_PRECISION=float32
KAN_TRAINING_EPOCHS=1000
KAN_BATCH_SIZE=32

# =============================================================================
# ‚öóÔ∏è PINN PHYSICS VALIDATION CONFIGURATION
# =============================================================================

# PINN Service
PINN_ENABLED=true
PINN_DEFAULT_TOLERANCE=1e-6
PINN_MAX_ITERATIONS=1000
PINN_CONVERGENCE_THRESHOLD=1e-8
PINN_STRICT_VALIDATION=false

# Physics Laws to Validate
PINN_VALIDATE_ENERGY_CONSERVATION=true
PINN_VALIDATE_MOMENTUM_CONSERVATION=true
PINN_VALIDATE_NEWTON_LAWS=true
PINN_VALIDATE_THERMODYNAMICS=true

# =============================================================================
# ‚ö° BITNET SERVICE CONFIGURATION
# =============================================================================

# BitNet Offline Inference
BITNET_ENABLED=true
BITNET_MODEL_PATH=data/bitnet_models
BITNET_DEFAULT_PRECISION=8bit
BITNET_MAX_CACHE_SIZE_GB=10.0
BITNET_INFERENCE_TIMEOUT=30.0
BITNET_ENERGY_EFFICIENCY_TARGET=0.8

# =============================================================================
# üîå MCP ADAPTER CONFIGURATION
# =============================================================================

# Model Context Protocol Integration
MCP_ENABLED=true
MCP_PROTOCOL_VERSION=2024-11-05
MCP_SERVER_NAME=nis-hub-mcp
MCP_SERVER_VERSION=1.0.0

# =============================================================================
# üì° WEBSOCKET MANAGER CONFIGURATION
# =============================================================================

# WebSocket Settings
WS_PING_INTERVAL=30
WS_CLEANUP_INTERVAL=60
WS_STALE_CONNECTION_TIMEOUT=300
WS_MAX_CONNECTIONS=1000

# =============================================================================
# üåê NODE COORDINATION CONFIGURATION
# =============================================================================

# Node Registry
NODE_REGISTRY_MAX_NODES=100
NODE_HEARTBEAT_INTERVAL=30
NODE_HEALTH_CHECK_TIMEOUT=10

# Mission Coordination
MISSION_MAX_CONCURRENT=10
MISSION_DEFAULT_TIMEOUT=3600
MISSION_CLEANUP_INTERVAL=300

# Memory Synchronization
MEMORY_SYNC_INTERVAL=60
MEMORY_MAX_ENTRIES=10000
MEMORY_COMPRESSION_ENABLED=true

# =============================================================================
# üîí SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS & Security Headers
CORS_ALLOW_CREDENTIALS=true
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# üìä MONITORING & LOGGING CONFIGURATION
# =============================================================================

# Structured Logging
LOG_FORMAT=json
LOG_FILE_PATH=logs/nishub.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Performance Monitoring
METRICS_ENABLED=true
METRICS_ENDPOINT=/metrics
PERFORMANCE_TRACKING=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5
